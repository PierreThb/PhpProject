{% block body %}

    <head>
        <meta charset="UTF-8" />
        <link rel="stylesheet" href="{{ asset('assets/css/index.css') }}" >
        <link rel="icon" type="image/x-icon" href="{{ asset('people.png') }}" />
    </head>

    <div class="content">
        <div class="block">
            <p>Hello World, welcome on TeamManagment website !</p>
            <img src="{{ asset('images/welcomepage.jpg') }}">
            {#<a href={{ path('login') }} class="button"><span>Login</span></a> #}
        </div>
    </div>

    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <form action="{{ path('index') }}" method="post">
        <label for="username">Username:</label>
        <input type="text" id="username" name="_username" value="{{ last_username }}" />

        <label for="password">Password:</label>
        <input type="password" id="password" name="_password" />

        {#
            If you want to control the URL the user
            is redirected to on success (more details below)
            <input type="hidden" name="_target_path" value="/account" />
        #}

        <button type="submit">login</button>
    </form>
{% endblock %}




